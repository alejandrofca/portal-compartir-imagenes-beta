<div class="card">

  <div class="card-header bg-dark text-white">
      <i class="fa fa-image"></i> Subir una Imagen
  </div>
  {{!-- IMAGE UPLOAD FORM --}}
  <div class="card-body">
    <form action="/images" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
              aria-describedby="inputGroupFileAddon" required />
            <label class="custom-file-label" for="inputGroupFile">Elija su archivo</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="T&iacute;tulo de la imagen" required>
      </div>

      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Descripci&oacute;n imagen"
          required></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-primary">
          <i class="fa fa-upload"></i> Subir Imagen
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <i class="fa fa-image"></i> Subidas recientes
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/{{uniqueId}}">
          <img src="/public/upload/{{filename}}" alt="{{title}}" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>